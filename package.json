{
  "name": "node-microservices",
  "main": "dist/app.js",
  "version": "0.0.3",
  "private": true,
  "engines": {
    "node": ">=8.1.4",
    "npm": ">=5.0.3"
  },
  "scripts": {
    "start": "node dist/index.js",
    "build": "npm run ts && npm run tslint",
    "debug": "npm run ts && npm run inspect",
    "ts": "tsc",
    "jest": "jest --forceExit",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "format:write": "prettier --config '.prettierrc.json' {src,test}/**/*.{ts,json,md} --write",
    "mocha": "tsc && mocha dist/**/*.spec.js",
    "lint:ci": "npm run tslint && npm run format:write",
    "inspect": "node --inspect dist/",
    "serve": "npm run build && npm start",
    "precommit": "lint-staged && npm run lint:ci",
    "postinstall": "npm run build"
  },
  "lint-staged": {
    "{src,test}/**/*.{ts,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "body-parser": "^1.17.2",
    "core-js": "^2.4.1",
    "cors": "^2.8.4",
    "debug": "^3.0.1",
    "dotenv": "6.2.0",
    "express": "4.13.x",
    "morgan": "^1.8.2",
    "nodemailer": "^4.0.1",
    "nodemailer-ses-transport": "^1.5.1",
    "nodemailer-smtp-transport": "^2.7.4",
    "setprototypeof": "^1.0.3",
    "supertest": "^3.0.0",
    "totoro-node": "^1.1.5"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.5",
    "@types/cors": "^2.8.1",
    "@types/debug": "0.0.29",
    "@types/express": "^4.0.37",
    "@types/jest": "^19.2.4",
    "@types/mocha": "^2.2.43",
    "@types/morgan": "^1.7.32",
    "@types/node": "^8.0.28",
    "@types/nodemailer": "^1.3.33",
    "@types/nodemailer-ses-transport": "^3.1.2",
    "husky": "^1.3.1",
    "jest": "^19.0.2",
    "lint-staged": "^8.1.0",
    "mocha": "^3.5.0",
    "prettier": "^1.16.1",
    "ts-jest": "^19.0.14",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2",
    "typescript-eslint-parser": "^8.0.0"
  }
}
